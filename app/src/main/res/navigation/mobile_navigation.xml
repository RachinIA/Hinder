<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.hinder0.ui.home.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_newpost"
        android:name="com.example.hinder0.ui.newpost.NewPostFragment"
        android:label="@string/title_post"
        tools:layout="@layout/fragment_newpost" />
    <fragment
        android:id="@+id/wishlist"
        android:name="com.example.hinder0.Wishlist"
        android:label="@string/title_wishlist"
        tools:layout="@layout/fragment_wishlist" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.hinder0.Profile"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
